<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/customborder"
    >

    <TextView
        android:id="@+id/borrowerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="3dp"
        android:text=" is looking for:"
        android:textStyle="bold"
        android:background="@drawable/bgred_header"
        android:layout_centerHorizontal="true"
        />
    
    <TextView
        android:id="@+id/ItemName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="ItemName"
        android:textColor="@color/PitchBlack"
        android:layout_below="@id/borrowerName"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        />

    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@id/ItemName"
        android:layout_below="@id/borrowerName"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        >

        <ImageView
            android:id="@+id/creditIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/credits"
            android:contentDescription="Credits:"
            />

        <TextView
            android:id="@+id/creditVal"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            />

    </LinearLayout>


    <TextView
        android:id="@+id/ItemType"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="ItemType"
        android:layout_below="@id/ItemName"
        />

    <TextView
        android:id="@+id/creationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemType"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAlignment="textEnd"
        android:textStyle="italic"
        android:text="Creation date: "
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        />
</RelativeLayout>