<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="@dimen/mtrl_card_spacing"
    android:layout_marginTop="@dimen/mtrl_card_spacing"
    android:layout_marginRight="@dimen/mtrl_card_spacing"
    app:cardBackgroundColor="@android:color/secondary_text_dark"
    app:cardCornerRadius="@dimen/cardview_default_radius"

    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true"
    app:cardPreventCornerOverlap="true"
    app:cardMaxElevation="@dimen/cardview_default_elevation"
    app:cardElevation="@dimen/cardview_default_elevation"
    xmlns:android="http://schemas.android.com/apk/res/android">
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        >

    <TextView
        android:id="@+id/borrowerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="3dp"
        android:text="Borrowing from: "
        android:textColor="@color/cardview_light_background"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ItemName"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="ItemName"
        android:textColor="@color/PitchBlack"
        android:layout_below="@id/borrowerName"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        />

    <ImageView
        android:id="@+id/creditIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:contentDescription="Credits:"
        android:src="@drawable/spcredits"
        android:layout_toRightOf="@id/ItemName"
        android:layout_below="@id/borrowerName"
        android:layout_marginTop="21dp"
        />

    <TextView
        android:id="@+id/creditVal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/borrowerName"
        android:layout_toEndOf="@id/creditIcon"
        android:layout_marginTop="25dp"
        android:layout_marginStart="5dp"
        android:text="0"
        android:textAlignment="viewStart"
        />


    <TextView
        android:id="@+id/ItemType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ItemName"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:text="ItemType" />

    <TextView
        android:id="@+id/reqStatusOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Status: "
        android:layout_below="@id/ItemType"
        />

    <TextView
        android:id="@+id/reqStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="Status"
        android:layout_below="@id/ItemType"
        android:layout_toEndOf="@id/reqStatusOne"
        />

    <TextView
        android:id="@+id/creationDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reqStatus"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAlignment="textEnd"
        android:textStyle="italic"
        android:text="Creation date: "
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        />

    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>