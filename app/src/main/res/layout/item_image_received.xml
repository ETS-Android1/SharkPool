<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/very_light_yellow"
    android:paddingTop="8dp">

    <ImageView
        android:id="@+id/image_body_received"
        android:layout_width="144dp"
        android:layout_height="216dp"
        android:background="@drawable/rounded_rectangle_pale_blue"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:scaleType="centerInside"
        android:visibility="visible"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/purple_gradient"
        android:layout_marginStart="4dp"
        />

    <TextView
        android:id="@+id/image_time_received"
        android:text="11:40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintLeft_toRightOf="@+id/image_body_received"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/image_body_received" />

</androidx.constraintlayout.widget.ConstraintLayout>